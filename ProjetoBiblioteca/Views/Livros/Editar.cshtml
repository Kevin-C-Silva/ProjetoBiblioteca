@model ProjetoBiblioteca.Models.Livros
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Livro";
}

<div class="page-header">
    <h2>Editar Livro</h2>
</div>
<link href="~/css/cadastro.css" rel="stylesheet" />

<div class="card">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation">
            @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@e.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Editar" method="post" class="form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <section>
            <div>
                <label>Título</label>
                <input asp-for="Titulo" class="input" required />
            </div>

            <div>
                <label>Autor</label>
                <select asp-for="AutorId" asp-items="ViewBag.Autores" class="select">
                    <option value="">(Selecione)</option>
                </select>
            </div>

            <div>
                <label>Editora</label>
                <select asp-for="EditoraId" asp-items="ViewBag.Editoras" class="select">
                    <option value="">(Selecione)</option>
                </select>
            </div>

            <div>
                <label>Gênero</label>
                <select asp-for="GeneroId" asp-items="ViewBag.Generos" class="select">
                    <option value="">(Selecione)</option>
                </select>
            </div>

            <div>
                <label>Ano</label>
                <input asp-for="Ano" type="number" class="input" />
            </div>

            <div>
                <label>ISBN</label>
                <input asp-for="Isbn" class="input" />
            </div>

            <div>
                <label>Quantidade total</label>
                <input asp-for="QuantidadeTotal" type="number" min="1" class="input" required />
            </div>
        </section>

        <div>
            <a asp-action="Index" class="btn btn-light">Cancelar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>

