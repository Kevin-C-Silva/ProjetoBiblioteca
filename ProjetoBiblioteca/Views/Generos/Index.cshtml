@model IEnumerable<ProjetoBiblioteca.Models.Generos>

<link href="~/css/listas.css" rel="stylesheet" />

<h2>Gêneros</h2>
<table class="tbl">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Criado em</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genero in Model)
        {
            <tr>

                <td>@genero.Nome</td>
                <td>@genero.CriadoEm</td>
                <td>
                    <div class="acoes">
                        <form asp-action="Editar" method="get">
                            <input type="hidden" name="id" value="@genero.Id" />
                            <button type="submit" class="btn btn-editar">Editar</button>
                        </form>

                        <form asp-action="Excluir" method="post" onsubmit="return confirm('Excluir este gênero?');">
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="id" value="@genero.Id" />
                            <button type="submit" class="btn btn-excluir">Excluir</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<a asp-action="Criar" class="btnLink">Adicionar gênero</a>