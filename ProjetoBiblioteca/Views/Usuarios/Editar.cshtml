@model ProjetoBiblioteca.Models.Usuarios
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Usuário";
}

@using ProjetoBiblioteca.Autenticacao
@{    
    var role = Context.Session.GetString(SessionKeys.UserRole);
}


<div class="page-header">
    <h2>Editar Usuário</h2>
</div>
<link href="~/css/cadastro.css" rel="stylesheet" />

@if (!ViewData.ModelState.IsValid)
{
    <div class="validation">
        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@e.ErrorMessage</div>
        }
    </div>
}

<form asp-action="Editar" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <section class="cad">
        <div>
            <label>Nome</label>
            <input asp-for="Nome" class="input" required />
        </div>
        <div>
            <label>Email</label>
            <input asp-for="Email" class="input" required />
        </div>
        @if(role == "Admin")
        {
            <div>
                <label>Senha</label>
                <input asp-for="Nome" class="input" required />
            </div>
        }
        <div>
            <label>Nome</label>
            <input asp-for="Nome" class="input" required />
        </div>

    </section>


    <div class="dBtn" style="max-width:fit-content; display: flex; flex-direction:row; justify-content:center;">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>